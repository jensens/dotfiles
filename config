# i3 config file (v4) for Regolith Desktop Environment
#
# Please see http://i3wm.org/docs/userguide.html for a complete reference!

# Initial Screenlayout
exec /home/jensens/.screenlayout/dpi.sh
#exec /home/jensens/.screenlayout/single.sh

# bind key for office mode
bindsym $mod+Ctrl+i exec /home/jensens/.screenlayout/single.sh
bindsym $mod+Ctrl+o exec /home/jensens/.screenlayout/office.sh


# Define Screens:
set $thinkpad eDP-1
set $hdmi1 HDMI-1
set $hdmi2 HDMI-2
set $dp1 DP-1
set $dp2 DP-2
set $samsung DP-2

# This defines which key super maps to on your keyboard.
# Alt key is Mod1, and Windows key is Mod4
set $mod Mod4
set $alt Mod1

# i3xrocks config file
set $i3xrocks_config /etc/regolith/i3xrocks/config

# compton config file
set $compton_config /etc/regolith/compton/config

# path to terminal. Override this to specify a custom terminal.
set $terminal_path /usr/bin/mate-terminal


# Color values are defined in ~/.Xresources-regolith
# These are the labels which define each i3 workspace.
set_from_resource $wsterm   i3-wm.workspace.01.name "1:Term"
set_from_resource $wsweb    i3-wm.workspace.02.name "2:Web"
set_from_resource $wsdev    i3-wm.workspace.03.name "3:Dev"
set_from_resource $wsmail   i3-wm.workspace.04.name "4:Mail"
set_from_resource $wschat   i3-wm.workspace.05.name "5:Chat"
set_from_resource $wsfile   i3-wm.workspace.06.name "6:Files"
set_from_resource $wsoffice i3-wm.workspace.07.name "7:Office"
set_from_resource $wsmedia  i3-wm.workspace.08.name "8:Media"
set_from_resource $wssec    i3-wm.workspace.09.name "9:Sec"
set_from_resource $ws10     i3-wm.workspace.10.name "10"
set_from_resource $ws11     i3-wm.workspace.11.name "11"
set_from_resource $ws12     i3-wm.workspace.12.name "12"
set_from_resource $ws13     i3-wm.workspace.13.name "13"
set_from_resource $ws14     i3-wm.workspace.14.name "14"
set_from_resource $ws15     i3-wm.workspace.15.name "15"
set_from_resource $ws16     i3-wm.workspace.16.name "16"
set_from_resource $ws17     i3-wm.workspace.17.name "17"
set_from_resource $ws18     i3-wm.workspace.18.name "18"
set_from_resource $ws19     i3-wm.workspace.19.name "19"

# assign screens to workspaces
workspace "$wsterm"   output $thinkpad
workspace "$wsweb"    output $samsung $thinkpad
workspace "$wsdev"    output $samsung $thinkpad
workspace "$wsmail"   output $samsung $thinkpad
workspace "$wschat"   output $samsung $thinkpad
workspace "$wsfile"   output $thinkpad
workspace "$wsoffice" output $samsung $thinkpad
workspace "$wsmedia"  output $thinkpad
workspace "$wssec"    output $thinkpad

# Use  Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

hide_edge_borders smart

# start a terminal
bindsym $mod+Return exec $terminal_path

# kill focused window
bindsym $mod+Shift+q kill

set_from_resource $rofiTheme rofi.theme "regolith-theme"

# rofi app and window launchers
bindsym $mod+space exec rofi -show drun -theme $rofiTheme
bindsym $mod+Shift+space exec rofi -show run -theme $rofiTheme
bindsym $mod+Ctrl+space exec rofi -show window -theme $rofiTheme

# change focus
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# bindsym $mod+h focus left
# bindsym $mod+j focus down
# bindsym $mod+k focus up
# bindsym $mod+l focus right

# move windows in workspaces
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# bindsym $mod+Shift+h move left
# bindsym $mod+Shift+j move down
# bindsym $mod+Shift+k move up
# bindsym $mod+Shift+l move right

# move workspace to other monitor
bindsym $mod+Ctrl+Left move workspace to output left
bindsym $mod+Ctrl+Right move workspace to output right

# toggle split orientation
bindsym $mod+BackSpace split toggle

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

# change gaps interactively
bindsym $mod+minus gaps inner current minus 4
bindsym $mod+plus gaps inner current plus 4

# show/hide keybindings
bindsym $mod+Shift+question exec --no-startup-id /usr/bin/conky-toggle

# toggle tiling / floating
bindsym $mod+Shift+f floating toggle

# audio
#bindsym XF86AudioRaiseVolume exec amixer -q set Master 2dB+ unmute
#bindsym XF86AudioLowerVolume exec amixer -q set Master 2dB- unmute
#bindsym XF86AudioMute exec amixer -q set Master toggleq

# screen brightness
bindsym XF86MonBrightnessUp   exec "sudo /usr/bin/brightnessctl s +5%"
bindsym XF86MonBrightnessDown exec "sudo /usr/bin/brightnessctl s 5%-"
bindsym Ctrl+XF86MonBrightnessUp   exec "sudo /usr/bin/brightnessctl -d tpacpi::kbd_backlight s +1"
bindsym Ctrl+XF86MonBrightnessDown exec "sudo /usr/bin/brightnessctl -d tpacpi::kbd_backlight s 1-"

# change container layout (stacked, tabbed, toggle split)
# bindsym $mod+s layout stacking
bindsym $mod+Ctrl+t layout tabbed
bindsym $mod+Ctrl+y layout toggle split

# move to workspace
bindsym $mod+1 workspace $wsterm
